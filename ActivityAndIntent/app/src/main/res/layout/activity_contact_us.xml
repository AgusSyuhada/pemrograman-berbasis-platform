<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.contactus.ContactUsActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7B1FA2"
        android:orientation="vertical"
        android:padding="48dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_us"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/layoutLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_location"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/location"
                app:tint="#7B1FA2" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="#4B0082"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ivWebsite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_public"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/website"
                app:tint="#7B1FA2" />

            <TextView
                android:id="@+id/tvWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/website_link"
                android:textColor="#4B0082"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_call"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/phone"
                app:tint="#7B1FA2" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textColor="#4B0082"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivClock"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_schedule"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/operating_hours"
                app:tint="#7B1FA2" />

            <TextView
                android:id="@+id/tvOperatingHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operating_hours_desc"
                android:textColor="#4B0082"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>